{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./src",
        "incremental": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./node_modules",
        "**/*.test.ts"
    ]
}
